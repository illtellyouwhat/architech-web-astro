  title="Data Pipelines & Scrapers"
  subtitle="Robust, scalable data collection and transformation."
  icon="lucide:database"
  summary="We design pipelines that start with compliant collection, layer on cleansing and validation, and end with analytics-ready datasets."
  image="https://images.unsplash.com/photo-1461749280684-dccba630e2f6?w=1200&h=600&fit=crop"
  imageAlt="Engineer reviewing a streaming data dashboard"
  capabilities={capabilities}
  benefits={benefits}
