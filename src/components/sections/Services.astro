---
import { Icon } from 'astro-icon/components';
import RevealOnScroll from '../react/RevealOnScroll';

const services = [
  {
    icon: 'lucide:brain',
    title: 'LLM Applications',
    description:
      'Custom AI copilots, document intelligence, and retrieval-augmented systems designed for your teams.',
    features: [
      'ChatGPT-style copilots branded for your org',
      'Document analysis + summarization pipelines',
      'Retrieval Augmented Generation (RAG) stacks',
      'Fine-tuned assistants for support workflows'
    ],
    link: '/services/llm-applications'
  },
  {
    icon: 'lucide:database',
    title: 'Data Pipelines & Scrapers',
    description:
      'Collect, normalize, and distribute trustworthy data with resilient scraping + ETL infrastructure.',
    features: [
      'High-volume scraping frameworks',
      'Streaming + batch ETL orchestration',
      'Automated validation & alerting',
      'API integrations and monitoring'
    ],
    link: '/services/data-pipelines'
  },
  {
    icon: 'lucide:workflow',
    title: 'System Workflows',
    description:
      'Connect platforms using event-driven middleware, Zapier/n8n, and custom webhook services.',
    features: [
      'Zapier / n8n automation architecture',
      'Event-driven middleware & queues',
      'Cross-platform data synchronization',
      'Custom webhook development'
    ],
    link: '/services/system-workflows'
  }
];
---
<section id="services" class="bg-white py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <p class="text-sm font-semibold uppercase tracking-[0.3em] text-gray-500">Services</p>
      <h2 class="mt-4 text-4xl font-light text-gray-900">Our Expertise</h2>
      <p class="mx-auto mt-4 max-w-3xl text-lg text-gray-500">
        We pair LLM strategy with production-ready engineering so marketing sites, blogs, and internal tools all share
        one design system and deployment pipeline.
      </p>
    </div>

    <div class="mt-16 grid gap-8 lg:grid-cols-3">
      {services.map((service) => (
        <article class="group flex h-full flex-col overflow-hidden rounded-2xl border border-gray-100 bg-white shadow-sm transition hover:-translate-y-1 hover:shadow-lg">
          <div class="border-b border-gray-50 p-8">
            <Icon name={service.icon} class="mb-4 h-8 w-8 text-gray-400" />
            <h3 class="text-xl font-medium text-gray-900">{service.title}</h3>
            <RevealOnScroll client:visible>
              <p class="mt-3 text-gray-600">{service.description}</p>
            </RevealOnScroll>
          </div>
          <RevealOnScroll client:visible>
            <div class="flex flex-1 flex-col justify-between p-8">
              <ul class="space-y-3 text-sm text-gray-600">
                {service.features.map((feature) => (
                  <li class="flex items-start gap-3">
                    <Icon name="lucide:check-circle" class="mt-0.5 h-4 w-4 text-gray-400" />
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
              <a
                href={service.link}
                class="mt-6 inline-flex items-center gap-2 text-sm font-medium text-gray-700 transition hover:text-gray-900"
              >
                Learn more
                <Icon name="lucide:arrow-right" class="h-4 w-4" />
              </a>
            </div>
          </RevealOnScroll>
        </article>
      ))}
    </div>
  </div>
</section>
