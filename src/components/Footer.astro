---
import { Icon } from 'astro-icon/components';
import { siteConfig } from '@/config/site';

const currentYear = new Date().getFullYear();
const quickLinks = [
  { label: 'Home', href: '/#home' },
  { label: 'Services', href: '/#services' },
  { label: 'About', href: '/#about' },
  { label: 'Contact', href: '/#contact' }
];

const serviceLinks = [
  'LLM Applications',
  'Data Pipelines',
  'Web Scrapers',
  'System Workflows',
  'API Integration'
];
---
<footer class="border-t border-gray-100 bg-gray-50">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
      <div class="md:col-span-2">
        <div class="mb-4 flex items-center gap-3">
          <img
            src="/lovable-uploads/22af2fd9-7390-4312-8b89-2db9122e4680.png"
            alt={siteConfig.title}
            class="h-8 w-8"
            loading="lazy"
          />
          <p class="text-xl font-medium text-gray-900">{siteConfig.title}</p>
        </div>
        <p class="mb-6 max-w-xl text-gray-500">
          Transforming businesses through intelligent automation, resilient data systems, and
          seamless workflow orchestration.
        </p>
        <div class="flex space-x-4">
          <span class="flex h-10 w-10 items-center justify-center rounded-lg bg-gray-200">
            <Icon name="lucide:code" class="h-5 w-5 text-gray-500" />
          </span>
          <span class="flex h-10 w-10 items-center justify-center rounded-lg bg-gray-200">
            <Icon name="lucide:database" class="h-5 w-5 text-gray-500" />
          </span>
          <span class="flex h-10 w-10 items-center justify-center rounded-lg bg-gray-200">
            <Icon name="lucide:workflow" class="h-5 w-5 text-gray-500" />
          </span>
        </div>
      </div>

      <div>
        <h4 class="mb-4 text-lg font-medium text-gray-900">Quick Links</h4>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a class="text-gray-500 transition hover:text-gray-900" href={link.href}>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="mb-4 text-lg font-medium text-gray-900">Services</h4>
        <ul class="space-y-3">
          {serviceLinks.map((item) => (
            <li class="text-gray-500">{item}</li>
          ))}
        </ul>
      </div>
    </div>

    <div class="mt-12 border-t border-gray-200 pt-6 text-sm text-gray-400 sm:flex sm:items-center sm:justify-between">
      <p>Â© {currentYear} {siteConfig.title}. All rights reserved.</p>
      <a
        class="mt-4 inline-flex items-center gap-2 text-gray-400 transition hover:text-gray-600 sm:mt-0"
        href={`mailto:${siteConfig.email}`}
      >
        {siteConfig.email}
        <Icon name="lucide:external-link" class="h-4 w-4" />
      </a>
    </div>
  </div>
</footer>
