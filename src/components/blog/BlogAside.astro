---
import type { CollectionEntry } from 'astro:content';

interface Props {
  latestPosts: CollectionEntry<'posts'>[];
  tags: string[];
}

const { latestPosts, tags } = Astro.props;
---
<div class="space-y-6">
  <section class="rounded-2xl border border-gray-100 bg-white p-5 shadow-sm">
    <h2 class="text-sm font-semibold uppercase tracking-wide text-gray-500">Latest</h2>
    <ul class="mt-4 space-y-3 text-sm">
      {latestPosts.map((post) => (
        <li>
          <a class="text-gray-700 transition hover:text-gray-900" href={`/blog/${post.slug}/`}>
            {post.data.title}
          </a>
        </li>
      ))}
    </ul>
  </section>

  {tags.length > 0 && (
    <section class="rounded-2xl border border-gray-100 bg-white p-5 shadow-sm">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-gray-500">Topics</h2>
      <div class="mt-4 flex flex-wrap gap-2 text-sm">
        {tags.map((tag) => (
          <span class="rounded-full bg-gray-100 px-3 py-1 text-gray-600">#{tag}</span>
        ))}
      </div>
    </section>
  )}
</div>
